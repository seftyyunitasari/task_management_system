<p id="notice"><%= notice %></p>

<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>Deadline</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
<%= link_to "Sort by deadline", :sort => "deadline"%>
<%= link_to "Sort by priority", :sort => "priority"%>
<%= link_to "Sort by status", :sort => "status"%>

<%= form_tag(tasks_path, method: :get) do %>
  <p> Search by a title </p>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag ("Search") %>
<% end %>

<%= form_tag(tasks_path, method: :get) do %>
  <p> Search by status </p>
  <%= select_tag(:priority, options_for_select([["High", "high"], ["Middle", "middle"], ["Low", "low"]])) %>
  <%= submit_tag ("Search by priority") %>
<% end %>

<h3>Search result</h3>

<% if @task_list.present? %>
  <table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Detail</th>
      <th>Deadline</th>
      <th>Priority</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_list.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.detail %></td>
        <td><%= task.deadline %></td>
        <td><%= task.priority %></td>
        <td><%= task.status %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
